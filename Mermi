-- Sahte eşya atma scripti

-- Eşyaların ID ve isimleri
local fakeItems = {
    { id = 1001, name = "Sahte Elmas" },
    { id = 1002, name = "Sahte Altın" },
    { id = 1003, name = "Sahte Gümüş" },
    -- İsterseniz daha fazla sahte eşya ekleyebilirsiniz
}

-- Scriptin bağlı olduğu nesne (örneğin, bir part)
local parentPart = script.Parent

-- Butonun özellikleri
local buttonSize = UDim2.new(0, 200, 0, 50) -- Buton boyutu (genişlik, yükseklik)
local buttonPosition = UDim2.new(0.5, -100, 0.5, -25) -- Butonun ekran içindeki konumu (x, y)

-- Buton oluşturma fonksiyonu
local function createButton()
    -- Yeni bir TextButton oluştur
    local button = Instance.new("TextButton")
    button.Text = "Sahte Eşyaları Al"
    button.Size = buttonSize
    button.Position = buttonPosition
    button.Parent = parentPart -- Butonu parentPart'a ekleyin (bu örnekte scriptin bağlı olduğu nesne)

    -- Butona tıklandığında çalışacak fonksiyon
    button.MouseButton1Click:Connect(function()
        -- Oyuncuya mesaj gönder
        local player = game.Players:GetPlayerFromCharacter(button.Parent)
        if not player then return end
        
        player:Chat("Sahte eşyalar yüklendi!")

        -- Sahte eşyaları oyuncuya ver
        local backpack = player.Backpack
        for _, item in ipairs(fakeItems) do
            local newFakeItem = Instance.new("Tool")
            newFakeItem.Name = item.name
            newFakeItem.Parent = backpack
        end
    end)
end

-- Buton oluştur
createButton()
